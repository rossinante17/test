<div >
  <h5>
    Edit User Account
  </h5>

  <div>
    <form action="/modify_user" method="post">
      <div>
        <label for="email_box">Email</label>
        <input id="email_box" name="query_email" value="<%= @current_user.email %>">
      </div>
      <div>
        <label for="username_box">Username</label>
        <input id="username_box" name="query_username" value="<%= @current_user.username %>">
      </div>
      <div>
        <label for="phone_box">Phone</label>
        <input id="phone_box" name="query_phone" value="<%= @current_user.phone %>">
      </div>
      <div>
        <label for="public_box">Public</label>
        <input id="public_box" name="query_public" type="checkbox" value="1" <%= "checked" if @current_user.public %>>
      </div>
      <div>
        <label for="articles_count_box">Articles count</label>
        <input id="articles_count_box" name="query_articles_count" value="<%= @current_user.articles_count %>">
      </div>
      <div>
        <label for="takewaways_count_box">Takewaways count</label>
        <input id="takewaways_count_box" name="query_takewaways_count" value="<%= @current_user.takewaways_count %>">
      </div>
      <div>
        <label for="folders_count_box">Folders count</label>
        <input id="folders_count_box" name="query_folders_count" value="<%= @current_user.folders_count %>">
      </div>

      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
